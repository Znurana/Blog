@using EntityLayer.Concreate
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<h1>Gelen qutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gonderen</th>
        <th>Tarih</th>
        <th>Mesaji ac</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.MessageID</th>
    <td>@item.Subject</td>
    <td>@item.SenderUser.WriterName</td>
    <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>

    <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">mesaji ac</a></td>
</tr>

    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Mesaj yarat</a>



